# Maximum amount any integration quantity can change by in a timestep
maximum_timestep_change_factor           real            1.05

# Convergence threshold for the inner iteration
species_convergence_threshold            real            0.005

# Maximum number of iterations on the timestep constraint loop
num_timestep_iters                       integer         10

# Maximum number of iterations on the inner convergence loop
num_inner_iters                          integer         10

# Maximum factor that dt is allowed to grow per timestep
dt_max_change_factor                     real            1.05

# Multiply the timestep by this factor when we fail to converge
dt_cut_factor                            real            0.8

# Reject a species update if X < -tol or X > 1.0 + tol, and also
# reject the timestep if sum(X) violates either constraint
species_tolerance                        real            0.01

# Scale factor for initial timestep
dt_init_fraction                         real            0.01
